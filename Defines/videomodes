;MS-DOS video modes header by William Drum
;put this in your data segment

;which one you will use depends on your computer's graphics card

MSDOS		equ 03h	;terminal that appears on startup
CGA 		equ 04h	;4 color, 320x200 resolution, vram at B800h
Hercules	equ 07h  

PCjr 		equ 09h	;16 color, 320x200 resolution, vram at B800h
Tandy1000 	equ PCjr
Tandy		equ PCjr

EGA			equ 0Dh	;16 color, 4 bitplanes
VGA_16		equ 12h ;640x480, 4 bitplanes, vram at seg A000h
VGA 		equ 13h	;256 color, 320x200 resolution, vram at A000h


VGA_VRAM equ 0A000h	;load this into a segment register
EGA_VRAM equ 0A000h ;load this into a segment register
CGA_VRAM equ 0B800h	;load this into a segment register

Max_X equ 319
Max_Y equ 199
;320x200 pixels, zero-indexed

;base di at 0 for even rows and 2000h for odd rows. It's easiest to
;split the sprite into even and odd rows and draw it twice

VGA_VRAMSIZE equ 0FA00h		;use as cx when filling screen
VGA_16_VRAMSIZE equ 38400	;use as cx when filling screen
CGA_VRAMSIZE equ 3F40h		;use as cx when filling screen

CGA_REG_MODECTRL 	equ 03D8h
CGA_REG_COLORCTRL 	equ 03D9h
CGA_REG_STATUS 		equ 03DAh
CGA_REG_LIGHTPEN 	equ 03DBh

VGA_DAC_MASK		equ 03C6h	
VGA_DAC_ADDR_WRITE 	equ 03C8h	;write: primes VGA_DAC_DATA for writing, auto-inc
VGA_DAC_ADDR_READ	equ 03C7h	;write-only, primes VGA_DAC_DATA for reading
VGA_DAC_DATA		equ 03C9h
VCA_DAC_STATE		equ 03C7h	;read-only

;use these outside of the PrintString function.
VGA_BLACK				equ 0 	  		 
VGA_DARKBLUE 			equ 1 		 
VGA_DARKGREEN			equ 2		 
VGA_DARKCYAN			equ 3	 
VGA_DARKRED 			equ 4		 
VGA_DARKMAGENTA 		equ 5	 
VGA_DARKYELLOW			equ 6	 
VGA_LIGHTGRAY			equ 7	 
VGA_DARKGRAY			equ 8		 
VGA_LIGHTBLUE			equ 9		 
VGA_LIGHTGREEN			equ 10		 
VGA_LIGHTCYAN			equ 11	 
VGA_LIGHTRED			equ 12		 
VGA_LIGHTMAGENTA		equ 13	 
VGA_LIGHTYELLOW			equ 14	 
VGA_WHITE				equ 15


;use these when embedding color change control codes into strings.
VGA_TEXT_BLACK 	  		equ 0+80h
VGA_TEXT_DARKBLUE 		equ 1+80h
VGA_TEXT_DARKGREEN		equ 2+80h
VGA_TEXT_DARKCYAN		equ 3+80h
VGA_TEXT_DARKRED		equ 4+80h
VGA_TEXT_DARKMAGENTA	equ 5+80h
VGA_TEXT_DARKYELLOW		equ 6+80h
VGA_TEXT_LIGHTGRAY		equ 7+80h
VGA_TEXT_DARKGRAY		equ 8+80h
VGA_TEXT_LIGHTBLUE		equ 9+80h
VGA_TEXT_LIGHTGREEN		equ 0Ah+80h	;1010
VGA_TEXT_LIGHTCYAN		equ 0Bh+80h	;1011
VGA_TEXT_LIGHTRED		equ 0Ch+80h	;1100
VGA_TEXT_LIGHTMAGENTA	equ 0Dh+80h	;1101
VGA_TEXT_LIGHTYELLOW	equ 0Eh+80h	;1110
VGA_TEXT_WHITE			equ 0Fh+80h	;1111

